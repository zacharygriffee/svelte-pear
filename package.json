{
  "name": "__name__",
  "pear": {
    "name": "__name__",
    "type": "desktop",
    "gui": {
      "backgroundColor": "#1F2430",
      "height": "__height__",
      "width": "__width__"
    }
  },
  "type": "module",
  "license": "__license__",
  "main": "index.html",
  "scripts": {
    "watch-build": "nodemon --watch src --ext js,svelte --exec 'npm run build'",
    "build": "rollup -c",
    "watch-dev": "npm run clean && npm run build && (npm run watch-build &) pear run -d .",
    "dev": "npm run build && pear run -d .",
    "dev-package": "node tools/dev-package.js",
    "restore-template": "node tools/dev-package.js restore",
    "test": "brittle test/*.test.js",
    "clean": "rm -rf dist build"
  },
  "sideEffects": [
    "*.js"
  ],
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "brittle": "^3.0.0",
    "nodemon": "^3.1.9",
    "pear-interface": "^1.0.0",
    "rollup": "^4.30.1",
    "rollup-plugin-svelte": "^7.2.2",
    "svelte": "^5.18.0"
  }
}
